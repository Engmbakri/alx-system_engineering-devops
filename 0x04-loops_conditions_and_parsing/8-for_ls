#!/usr/bin/env bash
# This script displays the content of the current directory in a list format,
# showing only the part of the name after the first dash

# Using a for loop to iterate through files in the current directory
for file in *; do
    # Check if the file is a regular file (not a directory) and is not hidden
    if [ -f "$file" ] && [ "${file:0:1}" != "." ]; then
        # Extract the part of the name after the first dash
        display_name=$(echo "$file" | cut -d'-' -f2-)

        # Display the modified name
        echo "$display_name"
    fi
done
